			<couple>
				<term fontColour="0xffffff" fontSize="14"><![CDATA[<b>Carrier</b>]]></term>
				<definition fontSize="14" fontColour="0x000000"><![CDATA[A person who transmits pathogens without showing signs of illness]]></definition>
			</couple>

			<couple>
				<term fontColour="0xffffff" fontSize="14"><![CDATA[<b>Duration of an illness</b>]]></term>
				<definition fontSize="14" fontColour="0x000000"><![CDATA[The time that an illness lasts i.e. for symptoms to disappear]]></definition>
			</couple>

			<couple>
				<term fontColour="0xffffff" fontSize="14"><![CDATA[<b>Food poisoning/foodborne illness</b>]]></term>
				<definition fontSize="14" fontColour="0x000000"><![CDATA[An acute illness caused by eating contaminated or poisonous food]]></definition>
			</couple>

			<couple>
				<term fontColour="0xffffff" fontSize="14"><![CDATA[<b>Gastroenteritis</b>]]></term>
				<definition fontSize="14" fontColour="0x000000"><![CDATA[An inflammation of the stomach and intestinal tract that normally results in diarrhoea]]></definition>
			</couple>

			<couple>
				<term fontColour="0xffffff" fontSize="14"><![CDATA[<b>Incubation (onset) period</b>]]></term>
				<definition fontSize="14" fontColour="0x000000"><![CDATA[The period between ingestion of contaminated food and the first signs of illness]]></definition>
			</couple>

