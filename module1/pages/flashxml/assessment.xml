		<question refPageNo="5" modNo="1">
    		<text width="540"><![CDATA[<b>Which of the following are contamination hazards of food?</b>]]></text>
			<ans correct="0"><![CDATA[<b>Microbiological, physical, heat and chemical</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Microbiological, allergenic, physical and water</b>]]></ans>
			<ans correct="1"><![CDATA[<b>Chemical, physical, microbiological and allergenic</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Chemical, ice, irradiation and microbiological</b>]]></ans>
		</question>
		
		<question refPageNo="3" modNo="1">
    		<text width="540"><![CDATA[<b>State a food safety risk that may occur in a food business</b>]]></text>
			<ans correct="0"><![CDATA[<b>The cooking of food</b>]]></ans>
			<ans correct="0"><![CDATA[<b>The cooling of food</b>]]></ans>
			<ans correct="1"><![CDATA[<b>The contamination of food</b>]]></ans>
			<ans correct="0"><![CDATA[<b>The wastage of food</b>]]></ans>
		</question>
		
		<question refPageNo="3" modNo="1">
    		<text width="540"><![CDATA[<b>What is contamination?</b>]]></text>
			<ans correct="0"><![CDATA[<b>The multiplication of bacteria in food</b>]]></ans>
			<ans correct="1"><![CDATA[<b>The occurrence of harmful or objectionable matter in food</b>]]></ans>
			<ans correct="0"><![CDATA[<b>The storage of high-risk food at room temperature</b>]]></ans>
			<ans correct="0"><![CDATA[<b>The survival of bacteria during cooking</b>]]></ans>
		</question>
	
		<question refPageNo="6" modNo="1">
    		<text width="540"><![CDATA[<b>How can bad food hygiene adversely affect a food business?</b>]]></text>
			<ans correct="0"><![CDATA[<b>Cheaper food</b>]]></ans>
			<ans correct="1"><![CDATA[<b>Waste food</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Fewer customer complaints</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Lower training costs</b>]]></ans>
		</question>
		
		<question refPageNo="5" modNo="1">
    		<text width="540"><![CDATA[<b>Which of the following are all common causes of food poisoning?</b>]]></text>
			<ans correct="0"><![CDATA[<b>High temperatures, viruses and chemicals</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Bacteria, dust and viruses</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Refrigeration, chemicals and bacteria</b>]]></ans>
			<ans correct="1"><![CDATA[<b>Bacteria, viruses and chemicals</b>]]></ans>
		</question>
		
		<question refPageNo="3" modNo="1">
    		<text width="540"><![CDATA[<b>What is the best definition of safe food?</b>]]></text>
			<ans correct="1"><![CDATA[<b>Food that is free of contaminants and will not cause illness</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Food that can be stored at room temperature and will not go mouldy</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Food that has to be stored in a refrigerator</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Food that has a very long shelf life</b>]]></ans>
		</question>
		
		<question refPageNo="3" modNo="1">
    		<text width="540"><![CDATA[<b>Which of the following would best describe food safety/hygiene?</b>]]></text>
			<ans correct="0"><![CDATA[<b>Measures which protect profits</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Encouraging the training of food handlers</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Storing cooked beef at room temperature</b>]]></ans>
			<ans correct="1"><![CDATA[<b>Protecting food from contamination</b>]]></ans>
		</question>
				
		<question refPageNo="3" modNo="1">
    		<text width="540"><![CDATA[<b>Food poisoning is an illness mainly caused by?</b>]]></text>
			<ans correct="1"><![CDATA[<b>Eating contaminated food</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Preparing contaminated food</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Smelling contaminated food</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Buying contaminated food</b>]]></ans>
		</question>
		
		<question refPageNo="6" modNo="1">
    		<text width="540"><![CDATA[<b>Which of the following is a benefit of good food safety?</b>]]></text>
			<ans correct="0"><![CDATA[<b>Greater staff turnover</b>]]></ans>
			<ans correct="1"><![CDATA[<b>Reduced number of complaints</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Greatly reduced training costs</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Decreased cleaning costs</b>]]></ans>
		</question>
		<question refPageNo="6" modNo="1">
    		<text width="540"><![CDATA[<b>In which of the following ways can poor food safety reduce the profitability of a food business?</b>]]></text>
			<ans correct="0"><![CDATA[<b>Higher business rates</b>]]></ans>
			<ans correct="1"><![CDATA[<b>Fewer customers</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Higher gas and electricity bills</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Increased training costs</b>]]></ans>
		</question>


