		<question refPageNo="3" modNo="8">
    		<text width="540"><![CDATA[<b>Which of the following are all signs of infestation by insects?</b>]]></text>
			<ans correct="0"><![CDATA[<b>Loss of food, dead bodies and live bodies</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Webbing, eggs and feathers</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Pupae, maggots and fur</b>]]></ans>
			<ans correct="1"><![CDATA[<b>Live or dead bodies and maggots</b>]]></ans>
		</question>
		
		<question refPageNo="3" modNo="8">
    		<text width="540"><![CDATA[<b>Which of the following is a sign of infestation by birds?</b>]]></text>
			<ans correct="1"><![CDATA[<b>Droppings</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Webbing</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Fur</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Maggots</b>]]></ans>
		</question>
		
		<question refPageNo="3" modNo="8">
    		<text width="540"><![CDATA[<b>Which of the following are all common food pests?</b>]]></text>
			<ans correct="0"><![CDATA[<b>Spiders, rats and mice</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Pigeons, bees and flies</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Cockroaches, butterflies and rats</b>]]></ans>
			<ans correct="1"><![CDATA[<b>Rats, pigeons and cockroaches</b>]]></ans>
		</question>
		
		<question refPageNo="5" modNo="8">
    		<text width="540"><![CDATA[<b>Which of the following is the most important reason for controlling pests?</b>]]></text>
			<ans correct="1"><![CDATA[<b>To prevent the spread of disease</b>]]></ans>
			<ans correct="0"><![CDATA[<b>To reduce the frequency of decoration</b>]]></ans>
			<ans correct="0"><![CDATA[<b>To reduce food loss</b>]]></ans>
			<ans correct="0"><![CDATA[<b>To reduce problems of noise</b>]]></ans>
		</question>
		
		<question refPageNo="4" modNo="8">
    		<text width="540"><![CDATA[<b>Which of the following do pests need the most?</b>]]></text>
			<ans correct="0"><![CDATA[<b>Quiet food rooms</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Damp and dusty conditions</b>]]></ans>
			<ans correct="1"><![CDATA[<b>A supply of food</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Cold conditions</b>]]></ans>
		</question>
		
		<question refPageNo="3" modNo="8">
    		<text width="540"><![CDATA[<b>Which of the following are all signs of infestation by rats?</b>]]></text>
			<ans correct="1"><![CDATA[<b>Live or dead bodies and gnawed food and packaging</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Live or dead bodies, eggs and gnawed food</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Rat smears, webbing and gnawed food and packaging</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Fur, maggots and live or dead bodies</b>]]></ans>
		</question>
		
		<question refPageNo="6" modNo="8">
    		<text width="540"><![CDATA[<b>What must food handlers do if they see signs of mice in a food room?</b>]]></text>
			<ans correct="0"><![CDATA[<b>Put down poison bait</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Throw all the food away</b>]]></ans>
			<ans correct="1"><![CDATA[<b>Report immediately to the supervisor</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Close the premises immediately</b>]]></ans>
		</question>
		
