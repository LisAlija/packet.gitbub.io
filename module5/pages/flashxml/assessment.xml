		<question refPageNo="9" modNo="5">
    		<text width="540"><![CDATA[<b>Which of the following are <B>all</B> likely to result from badly stored canned food?</b>]]></text>
			<ans correct="1"><![CDATA[<b>Blown, rusty and dented cans</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Blown, infested and dented cans</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Blown, slimy and rusty cans</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Blown, rusty and mouldy cans</b>]]></ans>
		</question>
		
		<question refPageNo="8" modNo="5">
    		<text width="540"><![CDATA[<b>High-risk perishable foods should be labelled with a...</b>]]></text>
			<ans correct="0"><![CDATA[<b>purchase date</b>]]></ans>
			<ans correct="0"><![CDATA[<b>best-before date</b>]]></ans>
			<ans correct="0"><![CDATA[<b>sell-by date</b>]]></ans>
			<ans correct="1"><![CDATA[<b>use-by date</b>]]></ans>
		</question>
		
		<question refPageNo="7" modNo="5">
    		<text width="540"><![CDATA[<b>Which of the following are <B>all</B> important properties of a dry food store?</b>]]></text>
			<ans correct="0"><![CDATA[<b>Pest-proof, smooth floor and dry</b>]]></ans>
			<ans correct="0"><![CDATA[<b>High ceiling, pest-proof and well lit</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Well ventilated, cool and no windows</b>]]></ans>
			<ans correct="1"><![CDATA[<b>Cool, dry and pest-proof</b>]]></ans>
		</question>
		
		<question refPageNo="12" modNo="5">
    		<text width="540"><![CDATA[<b>Which of the following are recommended for cooking?</b>]]></text>
			<ans correct="0"><![CDATA[<b>105°C or 100°C for 2 minutes</b>]]></ans>
			<ans correct="1"><![CDATA[<b>75°C or 70°C for 2 minutes</b>]]></ans>
			<ans correct="0"><![CDATA[<b>50°C or 45°C for 2 minutes</b>]]></ans>
			<ans correct="0"><![CDATA[<b>63°C or 58°C for 2 minutes</b>]]></ans>
		</question>
			
		<question refPageNo="10" modNo="5">
    		<text width="540"><![CDATA[<b>Which of the following is the most important reason why food should be suitably packaged in a freezer?</b>]]></text>
			<ans correct="1"><![CDATA[<b>To avoid freezer burn</b>]]></ans>
			<ans correct="0"><![CDATA[<b>To take up less space</b>]]></ans>
			<ans correct="0"><![CDATA[<b>To protect it against pests</b>]]></ans>
			<ans correct="0"><![CDATA[<b>To keep it frozen</b>]]></ans>
		</question>		
	
		<question refPageNo="6" modNo="5">
    		<text width="540"><![CDATA[<b>What is the usual operating temperature for a general purpose refrigerator?</b>]]></text>
			<ans correct="0"><![CDATA[<b>6°C to 9°C</b>]]></ans>
			<ans correct="0"><![CDATA[<b>-1°C to +1°C</b>]]></ans>
			<ans correct="1"><![CDATA[<b>1°C to 4°C</b>]]></ans>
			<ans correct="0"><![CDATA[<b>8°C to 12°C</b>]]></ans>
		</question>
		<question refPageNo="11" modNo="5">
    		<text width="540"><![CDATA[<b>Which of the following will prevent contamination hazards during preparation?</b>]]></text>
			<ans correct="1"><![CDATA[<b>Using disposable cloths</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Keeping the temperature below 10°C</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Keeping the time as short as possible</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Minimising the amount of food prepared</b>]]></ans>
		</question>

		<question refPageNo="8" modNo="5">
    		<text width="540"><![CDATA[<b>Which of the following describes correct stock rotation?</b>]]></text>
			<ans correct="0"><![CDATA[<b>First in, last out</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Last in, first out</b>]]></ans>
			<ans correct="1"><![CDATA[<b>First in, first out</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Always use within seven days</b>]]></ans>
		</question>

		<question refPageNo="7" modNo="5">
    		<text width="540"><![CDATA[<b>Which of the following is an <B>essential</B> hygiene feature of a fridge?</b>]]></text>
			<ans correct="0"><![CDATA[<b>The floor must be sloping to assist drainage</b>]]></ans>
			<ans correct="1"><![CDATA[<b>It must be capable of being effectively cleaned</b>]]></ans>
			<ans correct="0"><![CDATA[<b>It must be on wheels</b>]]></ans>
			<ans correct="0"><![CDATA[<b>It must be made of aluminium</b>]]></ans>
		</question>
		
		<question refPageNo="8" modNo="5">
    		<text width="540"><![CDATA[<b>What does a best-before date on food mean?</b>]]></text>
			<ans correct="0"><![CDATA[<b>The date up to which the food is safe to eat</b>]]></ans>
			<ans correct="1"><![CDATA[<b>The date up to which the food is at its best quality</b>]]></ans>
			<ans correct="0"><![CDATA[<b>The date by which the food should be sold</b>]]></ans>
			<ans correct="0"><![CDATA[<b>The date when the food should be placed on display</b>]]></ans>
		</question>
		
		<question refPageNo="8" modNo="5">
    		<text width="540"><![CDATA[<b>What does a use-by date on food mean?</b>]]></text>
			<ans correct="0"><![CDATA[<b>The date up to which the food is at its best quality</b>]]></ans>
			<ans correct="1"><![CDATA[<b>The date up to which the food is safe to eat</b>]]></ans>
			<ans correct="0"><![CDATA[<b>The date by which the food should be rotated</b>]]></ans>
			<ans correct="0"><![CDATA[<b>It can only be sold after this date if a notice informs the purchaser</b>]]></ans>
		</question>

		<question refPageNo="12" modNo="5">
    		<text width="540"><![CDATA[<b>What is the most important food safety reason for cooking or reheating food?</b>]]></text>
			<ans correct="0"><![CDATA[<b>To make the food taste better</b>]]></ans>
			<ans correct="0"><![CDATA[<b>To destroy allergens</b>]]></ans>
			<ans correct="1"><![CDATA[<b>To destroy pathogens</b>]]></ans>
			<ans correct="0"><![CDATA[<b>To remove chemical contamination</b>]]></ans>
		</question>		

		<question refPageNo="15" modNo="5">
    		<text width="540"><![CDATA[<b>What is the most important reason for rapid cooling if food is to be eaten cold after cooking?</b>]]></text>
			<ans correct="0"><![CDATA[<b>To reduce the amount of energy used</b>]]></ans>
			<ans correct="1"><![CDATA[<b>To prevent the multiplication of any surviving food poisoning bacteria</b>]]></ans>
			<ans correct="0"><![CDATA[<b>To make the food taste better</b>]]></ans>
			<ans correct="0"><![CDATA[<b>To increase the shelf life of food</b>]]></ans>
		</question>

		<question refPageNo="5" modNo="5">
    		<text width="540"><![CDATA[<b>Which of the following is a control measure?</b>]]></text>
			<ans correct="0"><![CDATA[<b>Auditing the HACCP system</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Recording the temperature of the fridge 2 times a day</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Adjusting the fridge's thermostat</b>]]></ans>
			<ans correct="1"><![CDATA[<b>Storing high-risk food above raw food in the fridge</b>]]></ans>
		</question>
		
		<question refPageNo="3" modNo="5">
    		<text width="540"><![CDATA[<b>Which of the following is not a critical limit?</b>]]></text>
			<ans correct="0"><![CDATA[<b>Storing food below 8&#176;C in a refrigerator</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Cooking food to 75&#176;C</b>]]></ans>
			<ans correct="1"><![CDATA[<b>Storage of canned food at room temperature</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Cooling food within 90 minutes</b>]]></ans>
		</question>
		
		<question refPageNo="3" modNo="5">
    		<text width="540"><![CDATA[<b>Which of the following would you expect to find in documents of a HACCP system?</b>]]></text>
			<ans correct="1"><![CDATA[<b>Staff training records</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Holiday rotas for staff</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Balance sheet</b>]]></ans>
			<ans correct="0"><![CDATA[<b>Disciplinary records</b>]]></ans>
		</question>
		
		
